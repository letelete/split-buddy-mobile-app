{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "jsx": "react-jsx",
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "~/network:api/*": ["src/network/api/*"],
      "~/network:features/*": ["src/network/features/*"],
      "~/store/*": ["src/store/*"],
      "~/ui:components:features/*": ["src/ui/components/features/*"],
      "~/ui:components:lib/*": ["src/ui/components/lib/*"],
      "~/ui:hooks/*": ["src/ui/hooks/*"],
      "~/ui:styles/*": ["src/ui/styles/*"],
      "~/utils/*": ["src/utils/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx"]
}
