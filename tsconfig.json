{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "~/network:api/*": ["src/network/api/*"],
      "~/network:features/*": ["src/network/features/*"],
      "~/ui:features/*": ["src/ui/features/*"],
      "~/ui:hooks/*": ["src/ui/hooks/*"],
      "~/ui:lib/*": ["src/ui/lib/*"],
      "~/ui:styles/*": ["src/ui/styles/*"],
      "~/utils/*": ["src/utils/*"],
      "~/store/*": ["src/store/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx"]
}
