{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "jsx": "react-jsx",
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "~/features/*": ["src/features/*"],
      "~/api/*": ["src/api/*"],
      "~/router/*": ["src/router/*"],
      "~/store/*": ["src/store/*"],
      "~/ui:hooks/*": ["src/ui/hooks/*"],
      "~/ui:lib/*": ["src/ui/lib/*"],
      "~/ui:styles/*": ["src/ui/styles/*"],
      "~/utils/*": ["src/utils/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", "src/ui/hooks/use"]
}
